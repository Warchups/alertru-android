<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.fragments.DatosUsuario"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/fondoDatosUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/txtNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Cristian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/apellidosDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Apellidos:" />

        <EditText
            android:id="@+id/txtApellidosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guil"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/dniDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="DNI:" />

        <EditText
            android:id="@+id/txtDniUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="227g526E"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/passwordDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="ConstraseÃ±a:" />

        <EditText
            android:id="@+id/txtPasswordUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="textEnd"
            android:text="**"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/provinciaDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:text="Provincia:" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/province_arrays"
            android:textAlignment="center"
            android:layout_marginStart="232dp"
            android:prompt="@string/province_prompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimaryDark"
            android:minHeight="1dp"/>

        <Button
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"/>

    </LinearLayout>
</FrameLayout>
