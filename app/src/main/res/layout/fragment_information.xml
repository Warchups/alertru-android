<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.gnommostudios.alertru.alertru_android.view.fragments.InformationFragment">

    <LinearLayout
        android:id="@+id/informationTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--Esto no se porque no te lo muestra-->
        <TextView
            android:id="@+id/txtTitleInfomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:textColor="@color/gray"
            android:textSize="24dp"
            android:textStyle="italic|bold"
            tools:text="@string/computerSolutions" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <ScrollView
            android:id="@+id/scrollViewInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="always">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/gnommo_studios" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtInformationWebPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="web"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/webPage"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txtNumberPhone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="phone"
                        android:gravity="center"
                        android:text="@string/numberFixedPhone"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txtNumberPhone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="phone"
                        android:gravity="center"
                        android:text="@string/numberMobilePhone"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txtInformationMail1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="email"
                        android:gravity="center"
                        android:text="@string/emailInfo"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txtInformationMail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="email"
                        android:gravity="center"
                        android:text="@string/emailSupport"
                        android:textColor="@color/green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/asdasd"
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:padding="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo_solger" />

                    <TextView
                        android:id="@+id/asdasd2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Produced by: Solger Energy"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ver: 1.2.0" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
